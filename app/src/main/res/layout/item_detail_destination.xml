<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.santaistiger.gomourdeliveryapp.ui.viewmodel.OrderDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="43dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/container_complete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_destination"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:tint="@color/icon_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_destination" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_store_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:fontFamily="@font/nsbold"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:lineSpacingExtra="3dp"
                    tools:text="도착주소주소\n도착 주소를 주소"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_destination"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/container_complete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="20dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp"
                android:backgroundTint="@color/light_gray"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp" >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_pickup_complete"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:fontFamily="@font/nsregular"
                    android:hint="픽업 완료"
                    android:onClick="@{() -> viewModel.onPickupCompleteBtnClick()}" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="20dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp"
                android:backgroundTint="@color/light_gray"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="5dp" >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_delivery_complete"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:fontFamily="@font/nsregular"
                    android:hint="배달 완료"
                    android:onClick="@{() -> viewModel.onDeliveryCompleteBtnClick()}" />

            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>