<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 레이아웃 스타일 리소스 -->
    <style name="root_layout_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="normal_layout_fragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="root_layout_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- 텍스트뷰 스타일 리소스 -->
    <style name="title_fragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="info_title_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- editText 스타일 리소스 -->
    <style name="et_info_address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="et_info_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:inputType">text</item>
    </style>


    <!-- 이미지 버튼 스타일 리소스 -->
    <style name="hamburger_btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- 이미지뷰 스타일 리소스 -->
    <style name="iv_address">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:backgroundTint">@color/white</item>

    </style>

</resources>